<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8DBC4A"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/buttonStar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="204dp"
        android:contentDescription="Cruz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calculator_technology_svgrepo_com" />

    <ImageButton
        android:id="@+id/buttonAndroid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="Andy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/buttonStar"
        app:layout_constraintTop_toTopOf="@+id/buttonStar"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/buttonCheck"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:contentDescription="User"
        app:layout_constraintEnd_toEndOf="@+id/buttonStar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonStar"
        app:layout_constraintTop_toBottomOf="@+id/buttonStar"
        app:srcCompat="@drawable/noun_account" />

    <ImageButton
        android:id="@+id/buttonStarSilver"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Head"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCheck"
        app:layout_constraintEnd_toEndOf="@+id/buttonAndroid"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonCheck"
        app:layout_constraintTop_toBottomOf="@+id/buttonAndroid"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/noun_hacker_5276638" />
</androidx.constraintlayout.widget.ConstraintLayout>